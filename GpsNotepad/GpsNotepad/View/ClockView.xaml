    <ContentPage.Content>

        <Grid RowDefinitions="0.12*,0.12*,*"
              RowSpacing="0"
              BackgroundColor="{DynamicResource PrimaryColor}">

            <Grid Grid.Row="0" RowSpacing="0" ColumnSpacing="0"
                  ColumnDefinitions="0.2*,*,0.2*"
                  Padding="2">

                    <Label Grid.Column="1"
                       Text="Favourite restairant"
                       Style="{StaticResource labelPageOfClockStyle}"/>

                    <Image Source="ic_clear.png"
                       Grid.Column="2">

                        <Image.GestureRecognizers>
                            
                            <TapGestureRecognizer Command="{Binding TapBackCommand}"/>
                            
                        </Image.GestureRecognizers>

                    </Image>

            </Grid>

            <Grid Grid.Row="1" RowSpacing="0" Padding="2">

                <StackLayout Spacing="0"
                             Orientation="Horizontal"
                             HorizontalOptions="CenterAndExpand">

                    <Label Text="{Binding Hours, StringFormat='{0} : '}"
                           Style="{StaticResource labelPageOfClockStyle}"
                           FontAttributes="Bold"/>

                    <Label Text="{Binding Minutes, StringFormat=' {0} '}"
                           Style="{StaticResource labelPageOfClockStyle}"
                           FontAttributes="Bold"/>

                    <Label Text=" CEST"
                           Style="{StaticResource labelPageOfClockStyle}"
                           FontAttributes="Bold"/>

                </StackLayout>

            </Grid>

            <Grid Grid.Row="2"
                  Padding="0">
                
                <!--Location Clock-->
                
                <controls:CustomClock Margin="20,5"/>
                
            </Grid>

        </Grid>

    </ContentPage.Content>
