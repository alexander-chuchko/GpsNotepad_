             xmlns:local="clr-namespace:GpsNotepad.Controls"
             x:Class="GpsNotepad.View.SettingsView">
    <ContentPage.Content>
        <Grid RowDefinitions="0.1*, *" RowSpacing="0">

            <StackLayout Grid.Column="0" BackgroundColor="Red" IsVisible="true"
                         Padding="0"
                         Margin="0">


            </StackLayout>
            <BoxView VerticalOptions="EndAndExpand" IsVisible="false"
                     HeightRequest="2"
                     BackgroundColor="LightGray"/>
            <StackLayout Grid.Row="1" Padding="0" BackgroundColor="Green">

            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>